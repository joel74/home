#!/usr/bin/env sh

get_homebrew=https://raw.github.com/mxcl/homebrew/go
get_rvm=https://get.rvm.io

curl -fsSL $get_homebrew | ruby
curl -fsSL $get_rvm | bash -s stable --ruby

~/.jachymko/Darwin/formulae

hash -r # use the git from homebrew
git config --global credential.helper osxkeychain

ln -sfv /usr/local/opt/offline-imap/homebrew.mxcl.offline-imap.plist ~/Library/LaunchAgents
launchctl load ~/Library/LaunchAgents/homebrew.mxcl.offline-imap.plist
