hostname="daemonik.jachymko.net"

# IP addresses
cloned_interfaces="lo1 tun0 tun1"
defaultrouter="37.157.194.1"
ifconfig_lo1="inet 10.186.211.1/24"
ifconfig_vtnet0="inet 37.157.194.41/24"

# Host services
gateway_enable="YES"
nginx_enable="YES"
pf_enable="YES"

# Jails
jail_enable="YES"
jail_mount_enable="YES"
jail_devfs_enable="YES"
jail_devfs_ruleset="devfsrules_jail"
jail_list="unbound vpn bt"

# VPN jail
jail_vpn_hostname="vpn.jachymko.net"
jail_vpn_rootdir="/var/jail/vpn"
jail_vpn_devfs_ruleset="devfsrules_vpn_jail"

jail_vpn_ip="lo1|10.186.211.2"
jail_vpn_ip_multi0="tun0|10.186.212.1 10.186.212.2 mtu 1500 netmask 255.255.255.255"
jail_vpn_ip_multi1="tun1|10.186.213.1 10.186.213.2 mtu 1500 netmask 255.255.255.255"

jail_vpn_exec_poststart0="route add 10.186.212.0/24 10.186.212.2"
jail_vpn_exec_poststart1="route add 10.186.213.0/24 10.186.213.2"

jail_vpn_exec_poststop0="route delete 10.186.212.0/24"
jail_vpn_exec_poststop1="route delete 10.186.213.0/24"

# BT jail
jail_bt_hostname="bt.jachymko.net"
jail_bt_rootdir="/var/jail/bt"
jail_bt_ip="lo1|10.186.211.3"

# unbound jail
jail_unbound_hostname="unbound.jachymko.net"
jail_unbound_rootdir="/var/jail/unbound"
jail_unbound_ip="lo1|10.186.211.4"

# build jail (not auto-started)
jail_build_hostname="build.jachymko.net"
jail_build_rootdir="/var/jail/build"
jail_build_ip="lo1|10.186.211.5"
